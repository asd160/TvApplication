<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="80dp">

            <RelativeLayout
                android:id="@+id/line1"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/site"
                android:layout_marginTop="38dp"
                >
                <ImageView
                    android:id="@+id/iv_site"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/pin"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_toRightOf="@id/iv_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lb_speech_orb_not_recording_pulsed"
                    android:text="北京市"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/tv_site" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1"
                android:layout_marginTop="-5dp"
                >
                <TextView
                    android:id="@+id/tv_wendu_sing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="90sp"
                    android:textColor="@color/lb_speech_orb_not_recording_pulsed"
                    android:text="24" />
                <TextView
                    android:layout_toRightOf="@id/tv_wendu_sing"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:textColor="@color/lb_speech_orb_not_recording_pulsed"
                    android:textSize="30sp"
                    android:layout_marginTop="20dp"
                    android:text="℃"
                    android:id="@+id/textView" />

                <RelativeLayout
                    android:id="@+id/rl_zhiliang"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_toEndOf="@+id/textView"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/zhiliang"
                     >
                    <TextView
                        android:id="@+id/tv_zhiliang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/lb_speech_orb_not_recording_pulsed"
                        android:textSize="24dp"
                        android:text="优"/>

                </RelativeLayout>

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_wendu_duo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/line2"
                android:text="31°/18°"
                android:textSize="30sp"
                android:layout_marginTop="-5dp"
                android:textColor="@color/lb_speech_orb_not_recording_pulsed"
                />

            <RelativeLayout
                android:layout_marginTop="30px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_wendu_duo"
                android:id="@+id/relativeLayout">

                <ImageView
                    android:id="@+id/iv_fengxiangb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/fengxiangb48"/>

                <TextView
                    android:id="@+id/tv_fengxiang"
                    android:layout_toRightOf="@id/iv_fengxiangb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="东风"
                    android:textColor="@color/lb_speech_orb_not_recording_pulsed"
                    android:layout_marginLeft="10dp"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/lb_speech_orb_not_recording_pulsed"
                    android:text="2级"
                    android:layout_marginRight="55dp"
                    android:textSize="22sp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/relativeLayout"
                android:layout_marginTop="20px"
                android:id="@+id/relativeLayout2">
                <ImageView
                    android:id="@+id/iv_wenduji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/wendu48"/>
                <TextView
                    android:id="@+id/tv_shidu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lb_speech_orb_not_recording_pulsed"
                    android:text="相对湿度"
                    android:layout_toRightOf="@id/iv_wenduji"
                    android:layout_marginLeft="10dp"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/lb_speech_orb_not_recording_pulsed"
                    android:text="23%"
                    android:layout_marginRight="50dp"
                    android:textSize="22sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="31dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/time"
                android:layout_below="@+id/relativeLayout2"
                android:layout_marginTop="40px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="16sp"
                    android:textColor="@color/lb_speech_orb_not_recording_pulsed"
                    android:text="15:14更新"/>


            </RelativeLayout>


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:background="@drawable/bg"
            android:layout_marginBottom="20dp">

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        >

        <com.example.ubuntu.bick.tvapplication.custom.LineGraphicView
            android:id="@+id/lgv_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            />

    </LinearLayout>
</LinearLayout>
